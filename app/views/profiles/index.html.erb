<p id="notice"><%= notice %></p>

<%= render 'partials/search' %>

<h1>Profiles</h1>

<body>
  <div class="grid-container">
    <% @profiles.each do |profile| %>
      <div class="grid-item">
        <%= render partial: 'partials/userprofile', locals: { profile: profile } %>
      </div>
    <% end %>
  </div>
</body>

<br>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: auto auto auto auto auto auto auto auto;
    padding: 10px;
    align-items: start;
  }
  .grid-item {
    padding: 5%;
    font-size: 20px;
    text-align: center;
  }
</style>