<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Profile name</th>
      <th>Github address</th>
      <th>Github username</th>
      <th>Amount of followers</th>
      <th>Amount of following</th>
      <th>Amount stars</th>
      <th>Amount contributions</th>
      <th>Github profile image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.profile_name %></td>
        <td><%= profile.github_address %></td>
        <td><%= profile.github_username %></td>
        <td><%= profile.amount_of_followers %></td>
        <td><%= profile.amount_of_following %></td>
        <td><%= profile.amount_stars %></td>
        <td><%= profile.amount_contributions %></td>
        <td><%= profile.github_profile_image %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
