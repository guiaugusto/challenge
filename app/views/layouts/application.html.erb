<!DOCTYPE html>
<html>
  <head>
    <title>Challenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= image_tag("logo-white.png", { width: "30", height: "30", class: "d-inline-block align-top", style: "margin-right  : 1em;" }) %>
      <a class="navbar-brand" href="/">IndexerHub</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <div class="navbar-nav justify-content-end">
          <a class="nav-item nav-link" href="<%= new_profile_path %>">Register profile</a>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
