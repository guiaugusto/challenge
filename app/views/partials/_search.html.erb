<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  </head>
  <body>
    <%= image_tag("logo.png", { width: "10%", height: "10%", class: "block item-centralize" }) %>
    <%= form_tag(profiles_path, method: :get) do %>
      <div class="search-container">
        <div class="input-group">
              <div class="input-group-append item-centralize">
                <%= text_field(:search, :search, { class: "form-control py-2", style: "width: 30em;"}) %>
                <span>
                  <%= submit_tag('Pesquisar', { class: "btn btn-outline-secondary" }) %>
                </span>
              </div>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
  <style>
    .search-container {
      margin-top: 3em;
      margin-bottom: 3em;
    }
    .item-centralize {
      margin: 0 auto;
    }
    .block {
      display: block;
    }
  </style>
</html>

