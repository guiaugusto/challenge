<body>
  <%= image_tag("logo.png", { width: width, height: height, class: "block item-centralize", style: "margin-top: 3em;" }) %>
  <%= image_tag("title.png", { width: width, height: height, class: "block item-centralize" }) %>
  <%= form_tag(profiles_path, method: :get) do %>
    <div class="search-container">
      <div class="input-group">
        <div class="input-group-append item-centralize">
          <%= text_field_tag(:search, params[:search], { class: "form-control py-2", style: "width: 30em;"}) %>
          <span>
            <%= submit_tag("Search", { class: "btn btn-outline-secondary" }) %>
          </span>
        </div>
      </div>
      <% if @profiles.present? %>
        <%= label_tag(@profiles.count.to_s + " profiles found", nil, class: "label-centered text-muted" ) %>
      <% end %>
    </div>
  <% end %>
  <%= yield %>
</body>
<style>
  .search-container {
    margin-top: 3em;
    margin-bottom: 3em;
  }
  .item-centralize {
    margin: 0 auto;
  }
  .block {
    display: block;
  }
  .label-centered {
    margin-top: 1em;
    margin-left: 41em;
  }
</style>

